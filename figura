class figura:
    def _init_(self, area, perimetro):
        self.area = area;
        self.perimetro = perimetro;
    def set_area(self, area, ):
        self.area = area
    def set_perimetro(self,perimetro):
        self.perimetro = perimetro
    def get_perimetro(self):
        return self.perimetro
    def get_area(self):
        return self.area-
    def del_area(self):
        del self.area
    def del_perimetro(self):
        del self.perimetro
    area = property(get_area, set_area, del_area)
    perimetro = property(get_perimetro, set_perimetro, del_perimetro)
class circulo(figura):
    def _init_(self,radio):
        self.radio = radio
